include ../../logo/logo


mixin headerMain(data)
    +b.headerMain.container()&attributes(attributes)
        +e.logo
            +logo()
        +e.navbar
            +b.tabs
                +e.header(data-tabs-content='#tabsContent')
                    +e.tab_active
                        +e.title(data-tab-id='1') Возможности
                    +e.tab
                        +e.title(data-tab-id='2') Информация
                    +e.tab
                        +e.title(data-tab-id='3') Привилегии
        +e.search
            .input
                input.input__control(placeholder='поиск по сайту')
                != pugHelpers.Icon.call(locals, {iconName: 'search', className: 'input__icon', iconWidth: '17', iconHeight: '17'})
